source ~/.dotfiles/.env

for file in ~/.dotfiles/zsh/*.sh; do
  if [ -d "$file" ]; then
    echo "$file is directory"
  elif [ -f "$file" ]; then
    # echo "$file is file"
    source $file
  fi
done


# ZSH config
bindkey '^n' end-of-line
export TERM=xterm-256color

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
DISABLE_AUTO_UPDATE='true'
ZSH_DISABLE_COMPFIX='true'
# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME='Schminitz'
# Add wisely, as too many plugins slow down shell startup.
plugins=(
  # git
  zsh-autosuggestions
  zsh-syntax-highlighting
  web-search
)
source $HOME/.oh-my-zsh/oh-my-zsh.sh

export LC_ALL="zh_CN.UTF-8"
setopt NO_HUP

if command -v zoxide &> /dev/null
then
    eval "$(zoxide init zsh)"
else
    echo "zoxide 命令不存在"
fi

export PATH="$PATH:$HOME/.dotfiles/bin"

# 如果显示错乱
# alias run_tmux='TERM=screen-256color-bce TERM=xterm-256color tmux -f ~/.dotfiles/config/tmux.conf -u'
alias run_tmux='tmux -f ~/.dotfiles/config/tmux.conf -u'
if [ -z "$TMUX" ]; then
  tmux attach || run_tmux
else
  echo "already in tmux!"
fi
